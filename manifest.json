{
    "name": "ニコ生チェッカー",
	"manifest_version": 2,
    "version": "1.6.2",
     "browser_action": {
	      "default_icon": "image/icon.png",
	      "default_title": "放送中の番組を確認する",
          "default_popup": "html/popup.html"
	 },
    "description": "ニコニコ生放送の 自動次枠移動/放送中の番組数を表示/デスクトップ通知 をサポートします．", 
    "icons": {
        "16": "image/icon.png", 
        "32": "image/icon.png", 
        "64": "image/icon.png"
    }, 
    "permissions": [
        "alarms",
        "notifications",
        "tabs",
        "http://www.nicovideo.jp/",
        "https://secure.nicovideo.jp/",
        "http://live.nicovideo.jp/",
        "http://api.ce.nicovideo.jp/",
        "http://icon.nimg.jp/community/",
        "http://flapi.nicovideo.jp/api/",
        "http://watch.live.nicovideo.jp/"
    ],
    "background": {
	    "scripts": [
            "js/jquery-2.1.4.min.js",
            "js/newArrival.js",
            "js/comuHolder.js",
            "js/nicovideo.js",
            "js/background.js"
        ]
	},
    "content_scripts": [
        {
          "matches": ["http://live.nicovideo.jp/watch/*"],
          "js": [
                "js/jquery-2.1.4.min.js",
                "js/content.js"
            ]
        }
    ],
    "options_page": "html/options.html",
    "web_accessible_resources": [
        "image/icon.png"
    ]
}
